generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  clerkId   String   @unique
  password    String
  createdAt   DateTime @default(now())
  lastSeen    DateTime @updatedAt
  files       File[]

  @@map("users")   // ✅ Avoid MySQL conflict with reserved keyword USER
}

model File {
  id          String   @id @default(uuid())
  name        String
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  size        Int
  version     Int      @default(1)
  mimeType    String
  s3Key       String
  createdAt   DateTime @default(now())

  @@map("files")     // ✅ Consistent lower-case SQL table name
}